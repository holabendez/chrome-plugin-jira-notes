{
  "manifest_version": 3,
  "name": "Jira Notes",
  "version": "1.4.0",
  "description": "Take and manage notes, risk flags, and archive status for Jira tickets",
  "permissions": [
    "storage", 
    "activeTab", 
    "alarms",
    "scripting",
    "declarativeNetRequest",
    "downloads"
  ],
  "host_permissions": [
    "*://*.atlassian.net/*",
    "https://jira.service.tools-pi.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "all-notes.html",
        "data-service.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.atlassian.net/browse/*",
        "https://jira.service.tools-pi.com/browse/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
